<?xml version="1.0" enconding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_inherit_codes"
             inherit="sale.report_document">
        <!-- Insertaos dos columnas en la cabecera, justo despues de descripcion-->
        <xpath expr="//th[@name='th_description']" position="after">
            <th name = "th_default_code" class="text-start text-nowrap">Ref. Interna</th>
            <th name = "th_barcode" class="text-start text-nowrap">Codigo de barras</th>
        </xpath>

        <!-- Insertaos dos columnas en cada linea normal-->
         <xpath expr="//th[@name='td_name']" position="after">
            <td name = "th_default_code" class="text-start text-nowrap">Ref. Interna</th>
                <span t-field="line.product_id.default_code"/>
            </td>
            <td name = "th_default_code" class="text-start text-nowrap">Ref. Interna</th>
                <span t-field="line.product_id.barcode"/>
            </td>
        </xpath>

    </template>
</odoo>